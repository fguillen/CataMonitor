<div class="portlet">  
  <div class="portlet-header">
    <h4>All your Queries</h4> 
  </div> <!-- .portlet-header -->    
  
  <div class="portlet-content">  
    <!-- Start Table -->
    <table class="portlet-table" id="dataTable" cellpadding="0" cellspacing="0">        
      <thead>
        <tr>
          <th width="40%">Query</th>
          <th width="15%">Show</th>
          <th width="15%">Edit</th>
          <th width="15%">Destroy</th>     
          <th width="15%">Process</th>          
          <th></th>
        </tr>
      </thead>          
      
      <tbody>
        <% @queries.each do |query| %>
        <tr>
          <td class="alt"><%= link_to query.query, [@user, query] %></td>
          <td class="alt"><%= link_to "Show", [@user, query] %></td>              
          <td class="alt"><%= link_to "Edit", edit_user_query_path( @user, query ) %></td>
          <td class="alt"><%= link_to "Destroy", [@user, query], :confirm => 'Are you sure?', :method => :delete %></td>
          <td class="alt"><%= link_to "Process", process_mentions_user_query_path( @user, query ) %></td>
        </tr>          
        <% end %>
 
      </tbody>
    
    </table>
    <!-- End Table -->                  
  
  </div> <!-- .portlet-content -->  
  
</div> <!-- .portlet -->


<p><%= link_to "New Query", new_user_query_path( @user ) %></p>


